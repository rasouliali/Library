@model SignInViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>


<main class="form-signin">
    <form method="post">
        <img class="mb-4" src="/logo.webp" alt="RaiDana Logo">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <span class="text-danger" asp-validation-summary="All"></span>

        <div class="form-floating">
            <input type="text" class="form-control" asp-for="UserName" id="floatingInput" placeholder="MyUserName">
            <label asp-for="UserName">Username</label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe" > Remember me
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2025–2030</p>
    </form>
    <h5 class="h5 mb-3 fw-normal mt-5">does not has account? <a href="/Account/SignUp">click here</a> to register.</h5>
</main>


